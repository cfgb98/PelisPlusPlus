<%-include('partials/_header');%>

   <div class="container">
       <div class="row">
           <div class="col-md-5">
               <div class="card-body">
                   <form action="/add" method="POST">
                       <div class="form-group">
                           <input type="text" name="title" placeholder="Inserta un t&iacute;tulo" class="form-control">
                       </div>
                       <div class="form-group">
                        <textarea name="description"  cols="80" class="form-control" placeholder="Inserta una descripci&oacute;n"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                   </form>
               </div>
           </div> <!--Boostrap4 usa 12 columnas, 5+7=12-->
           <div class="col-md-7">
               <table class="table table-bordered table-hover">
                   <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>T&iacute;tulo</th>
                        <th>Descripci&oacute;n</th>
                        <th>Operaci&oacute;n</th>
                    </tr>
                   </thead>
                   <tbody>
                       <% for(var i=0;i<tasks.length;i++){%>
                         <tr>
                             <td><%= i+1%></td>
                             <td><%= tasks[i].title %></td>
                             <td><%= tasks[i].description %></td>
                             <td>
                                 <a href="/update/<%= tasks[i]._id %>" 
                                    class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">
                                    Hecho</a>
                                 <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                                 <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                            </td>
                             
                         </tr>
                      <% } %>
                   </tbody>
               </table>
           </div>
       </div>
   </div>
   <%-include('partials/_footer');%>